<h1>List of users</h1>


<hr>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
  </tr>

  <% @users.each do |a_user| %>
  <tr>
    <td>
      <%= a_user.username %>
    </td>

    <td>
      <% if a_user.private == false %>
      No
      <% else %>
      Yes
      <% end %>
    </td>

    <td>
      <a href="/users/<%= a_user.username %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>
